/* pages/schoolRank/schoolRank.wxss */
.introduce{
    width: 90%;
    margin-top: 50rpx;
}
.title{
    width: 100%;
    height: 50rpx;
    border-left: 15rpx solid #31C5B9;
    padding-left: 20rpx;
    color: gray;
    display: flex;
    align-items: center;
}
.main{
    width: 100%;
    font-size: 0.8em; 
}
.image{
    width: 600rpx;
}
.msg{
    width: 90%;
    margin-top: 50rpx;
}
.rank{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.3em;
    background-color: #F0F0F0;
    border-radius: 20rpx;
    color: gray;
    margin-top: 10rpx;
}
.ranking{
    width: 100rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.icon{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.name{
    width: 400rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}