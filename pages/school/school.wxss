/* pages/school/school.wxss */
.type{
  display: flex;
  width: 90%;
  height: 80rpx;
  background-color: #31C5B9;
  border-radius: 40rpx;
  margin-top: 10rpx;
}
.schoolT{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  text-align: center;
  border-right: 1px solid #666;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.majorT{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  text-align: center;
  border-left: 1px solid #666;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.search-flex{
	display: flex;
	padding: 20rpx;
	border-bottom: 1rpx solid #ddd;
	position: relative;
	z-index: 13;
	background: #f9f9f9;
	/* transform:  translateY(-100%); */
	margin-top: 0;
	transition: all 0.3s;
  width: 100%;
}
.search-flex.tophide{
	margin-top: -117rpx;
}
.search-flex button{
	background: #05867C;
	color: #fff;
	line-height: 72rpx;
	height: 72rpx;
	font-size: 30rpx;
	border-radius: 6rpx;
}
.search-bar{
	flex: 1;
	display: flex;
	border: 1rpx solid #e8e8e8;
	border-radius: 6rpx;
}
.search-bar input{
	flex: 1;
	height: 72rpx;
	line-height: 72rpx;
	padding: 0 10rpx;
	background: #fff;
}
.search-extra-btn{
	margin-left: 20rpx;
	white-space: nowrap;
}
.school{
	display: flex;
	flex-direction: column;
	width: 100%;
}
.outside{
	width: 100%;
}
/* 院校查询CSS样式表 */
.component{
	display: flex;
	align-items: center;
	justify-content: space-around;
	width: 100%;
	height: 200rpx;
	background-color: #F0F0F0;
	margin-top: 15rpx;
}
.msg{
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: space-around;
	width: 600rpx;
	height: 200rpx;
}
.name{
	display: flex;
	align-items: center;
	margin-left: 10rpx;
	width: 98%;
	height: 65rpx;
	color: gray;
}
.Type{
	margin-left: 10rpx;
	width: auto;
	height: 50rpx;
	border: 1px solid #31C5B9;
	color: #31C5B9;
}
.city{
	display: flex;
	align-items: center;
	margin-left: 10rpx;
	width: 98%;
	height: 65rpx;
	color: gray;
}
.img{
	display: flex;
	justify-content: center;
	width: 200rpx;
	height: 150rpx;
	border-radius: 50%;
}
.img image{
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
}
/* 专业查询样式表 */
.components{
	margin-top: 10px;
	width: 100%;
	display: flex;
	flex-direction: column;
	background-color: #31C5B9;
	color: #F0F0F0;
}
.majorMsg{
	width: 100%;
	display: flex;
	height: 80rpx;
	align-items: center;
	justify-content: space-around;
	font-size: 0.8em;
	border-bottom: 3rpx solid #ddd;
	border-top-left-radius: 30px;
	border-top-right-radius: 30px;
}
