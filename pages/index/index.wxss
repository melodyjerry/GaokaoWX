/**index.wxss**/
.container{
  /* 爷爷级别容器 */
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  background-color: #DBDCDC;
}
.banner{
  /* 轮播图容器 */
  width: 100%;
  height: 400rpx;
  background-color: white;
}
/* 轮播图 */
.swiper-container{
  position: relative;
}
.swiper-container .swiper{
  height: 400rpx;
}
.swiper-container .swiper .img{
  width: 100%;
  height: 100%;
  border-radius: 0rpx;
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  transition: all .6s;
  border-radius: 20rpx;
}
.swiper-container .dots .dot.active{
  width: 24rpx;
  background: #31C5B9;
}
.main{
  /* 中间菜单父容器 */
  width: 100%;
  height: 650rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-top: 20rpx;
  background-color: white;
}
.top{
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
}
.bottom{
  display: flex;
  justify-content: space-around;
  padding-top: -10rpx;
}
.tabbar{
  font-size: 20px;
}
.menu{
  width: 210rpx;
  height: 250rpx;
  padding-top: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color:#838181;
  cursor: pointer;
  line-height: 30px;
  border: 2rpx solid #ECE4D1;
  border-radius: 20rpx;
}
.img{
  width: 130rpx;
  height: 130rpx;
  border-radius: 100rpx;
  background-color: #CDCDCD;
}
